.register {
  height: 100vh;
  padding: 40rpx 20rpx 0 20rpx;
  background-color: #fafafa;
  box-sizing: border-box;
}
.register .account_info > view > input {
  height: 100rpx;
  line-height: 100rpx;
  margin: 40rpx 0;
  padding-left: 40rpx;
  border: 1px solid #999;
  border-radius: 30rpx;
}
.register .account_info > view > input.input_active {
  border: 1px solid transparent;
  box-shadow: 0 0 15px 10px #ccc;
}
.register .btn-area {
  margin-top: 80rpx;
}
.register .btn-area > button {
  width: 100%;
  margin: 30rpx 0;
  padding: 22rpx;
  color: #fff;
  border-radius: 40rpx;
  box-sizing: border-box;
}
.register button.register_btn {
  background-color: skyblue;
}
/* avatar */
.register .avatar {
  display: flex;
  width: 200rpx;
  height: 200rpx;
  margin: 40rpx auto 10rpx auto;
  justify-content: center;
  align-items: center;
  border: 4rpx solid #999;
  border-radius: 50%;
  overflow: hidden;
}
.register .avatar image {
  width: 100%;
}
.register .avatar view.avatar_add {
  font-size: 60rpx;
  font-weight: 520;
  color: #999;
}

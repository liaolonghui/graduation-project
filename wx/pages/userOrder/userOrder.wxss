.user_order {
  min-height: 100vh;
  background-color: #f1f1f1;
}
.user_order .order_type {
  display: flex;
  align-items: center;
  text-align: center;
  border-bottom: 1rpx solid #ccc;
  background-color: #fff;
}
.user_order .type_item {
  flex: 1;
  padding: 20rpx 0;
  border-bottom: 5rpx solid transparent;
}
.user_order .type_item.active {
  color: red;
  border-bottom: 5rpx solid red;
}

.user_order .order_item {
  padding: 20rpx 20rpx 10rpx 20rpx;
  border-bottom: 2rpx solid #ccc;
  background-color: #fff;
  margin: 20rpx 0;
}
.user_order .order_item .info {
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #f1f1f1;
}
.order_item .info image {
  max-width: 160rpx;
  max-height: 160rpx;
}
.order_item .info .name_count_state {
  width: 100%;
  padding-left: 20rpx;
}
.order_item .info .count_state {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  padding-top: 10rpx;
  box-sizing: border-box;
}
.order_item .info .name {
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.order_item .other_info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 100rpx;
}
.order_item .other_info .operation {
  display: flex;
}
.order_item .other_info .btn {
  margin: 0 10rpx;
  padding: 8rpx 20rpx;
  border: 2rpx solid #999;
  border-radius: 10rpx;
}
.order_item .other_info .btn.cancel {
  color: #333;
}
.order_item .other_info .btn.pay {
  color: #fff;
  background-color: red;
  border-color: red;
}
.order_item .other_info .btn.appraise,
.order_item .other_info .btn.take_over {
  padding: 10rpx 40rpx;
  color: #fff;
  background-color: red;
  border-color: red;
}

/* 填写评论的对话框 */
.comment_modal_wrap {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.comment_modal_wrap .mask {
  width: 100%;
  height: 100%;
  opacity: 0.5;
  background-color: #333;
}
.comment_modal_wrap .comment_modal {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -300rpx);
  width: 600rpx;
  padding: 40rpx;
  padding-bottom: 110rpx;
  border-radius: 20rpx;
  background-color: #fff;
  box-sizing: border-box;
}
.comment_modal .comment_input textarea {
  width: 100%;
  padding: 15rpx;
  margin: 10rpx 0;
  border-radius: 10rpx;
  border: 2rpx solid #ccc;
  box-sizing: border-box;
}
.comment_modal .comment_btn {
  display: flex;
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
}
.comment_modal .comment_btn view {
  flex: 1;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  border: 1rpx solid #ddd;
}
.comment_modal .comment_btn view:nth-child(2) {
  color: red;
}
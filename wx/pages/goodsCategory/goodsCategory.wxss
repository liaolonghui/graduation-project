.goods_category {
  padding: 10rpx;
}
.goods_category > .add_category_btn {
  width: 100%;
  border-bottom: 1px solid #ccc;
}
.goods_category .add_category_btn > button {
  width: 100% !important;
  padding: 24rpx 0;
  margin-bottom: 20rpx;
}
.goods_category .category_list_wrap {
  padding: 10rpx 10rpx 0 10rpx;
}
.goods_category .category_item {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 20rpx 10rpx 30rpx 10rpx;
  padding: 10rpx 20rpx;
  border-radius: 25rpx;
  box-shadow: 0 0 14rpx 8rpx #d9d9d9;
}
.goods_category .category_info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex: 3;
  font-size: 36rpx;
}
.goods_category .category_info .category_name {
  flex: 1;
  text-align: center;
}
.goods_category .category_info .tag {
  flex: 1;
  height: 80rpx;
  margin: 0 20rpx;
  line-height: 80rpx;
  text-align: center;
  font-weight: 550;
  color: #fff;
  background-color: #666;
  border-radius: 34rpx;
}
.goods_category .category_info .tag_1 {
  color: #F56C6C;
  background-color: #FEF0F0;
}
.goods_category .category_info .tag_2 {
  color: #67C23A;
  background-color: #F0F9EB;
}
.goods_category .category_info .tag_3 {
  color: #859EFF;
  background-color: #EAEEFB;
}
.goods_category .category_btn {
  flex: 2;
}
.goods_category .category_btn button {
  margin: 10rpx 0;
  width: 100%;
  border-radius: 25rpx;
  background-color: #EFF2FA;
}


/* dialog对话框 */
.goods_category {
  position: relative;
}
.dialog {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.dialog .dialog_mask {
  position: absolute;
  width: 100%;
  height: 100%;
  opacity: 0.6;
  background-color: #000;
}
.dialog .dialog_content {
  position: fixed;
  left: 50%;
  top: 220rpx;
  transform: translateX(-50%);
  min-width: 500rpx;
  padding: 60rpx;
  border-radius: 30rpx;
  background-color: #fff;
}

/* dialog里的输入框按钮等样式 */
.dialog .category_img {
  display: flex;
  justify-content: center;
  margin-bottom: 20rpx;
}
.dialog .category_img image {
  width: 160rpx;
  height: 160rpx;
  border: 2rpx solid #333;
  border-radius: 50%;
}
.dialog .category_img .category_img_add {
  width: 160rpx;
  height: 160rpx;
  line-height: 150rpx;
  font-size: 140rpx;
  text-align: center;
  color: #666;
  border: 2rpx solid #333;
  border-radius: 50%;
}
.dialog input {
  height: 80rpx;
}
.dialog_hidden {
  display: none;
}
.dialog .category_level,
.dialog .category_parent,
.dialog .category_name {
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 30rpx;
  margin-bottom: 25rpx;
  border: 1px solid #333;
  border-radius: 20rpx;
}
.dialog .category_btn_area {
  display: flex;
  margin-top: 50rpx;
}
.dialog .category_btn_area button {
  width: 230rpx;
}
.dialog .category_btn_area button.blue_btn {
  margin-left: 10rpx;
  background-color: skyblue;
  color: #fff;
}
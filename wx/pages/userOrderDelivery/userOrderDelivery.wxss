.order_delivery {
  min-height: 100vh;
  background-color: #f1f1f1;
}
.order_delivery .order_type {
  display: flex;
  align-items: center;
  text-align: center;
  border-bottom: 1rpx solid #ccc;
  background-color: #fff;
}
.order_delivery .type_item {
  flex: 1;
  padding: 20rpx 0;
  border-bottom: 5rpx solid transparent;
}
.order_delivery .type_item.active {
  color: red;
  border-bottom: 5rpx solid red;
}

.order_delivery .order_item {
  padding: 20rpx 20rpx 10rpx 20rpx;
  border-bottom: 2rpx solid #ccc;
  background-color: #fff;
  margin: 20rpx 0;
}
.order_delivery .order_item .info {
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #f1f1f1;
}
.order_item .info image {
  max-width: 160rpx;
  max-height: 160rpx;
}
.order_item .info .name_count_state {
  padding-left: 20rpx;
}
.order_item .info .count_state {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  padding-top: 10rpx;
  box-sizing: border-box;
}
.order_item .info .name {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.order_item .other_info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 100rpx;
}
.order_item .other_info .operation {
  display: flex;
}
.order_item .other_info .btn {
  margin: 0 10rpx;
  padding: 10rpx 40rpx;
  border-radius: 10rpx;
}
.order_item .other_info .btn.delivery {
  color: #fff;
  background-color: red;
  border-color: red;
}
<view class="goods_audit">
  <!-- 搜索框 -->
  <view class="goods_input">
    <input type="text" />
  </view>
  <!-- 商品列表 -->
  <view class="goods_list">
    <view class="goods_list_item" wx:for="{{goodsList}}" wx:key="_id">
      <!-- <view class="goods_img">
        <image src="{{item.imgs[0].img_url}}"></image>
      </view> -->
      <view class="goods_name">
        商品名：{{item.name}} {{item.state ? '' : '(审核中)'}}
      </view>
      <view class="goods_seller">
        发布者：{{item.seller.nickName}}
      </view>
    </view>
  </view>
</view>

.search .search_input {
  padding: 20rpx;
  border-bottom: 2rpx solid #ccc;
}
.search .search_input input {
  padding: 10rpx 30rpx;
  border: 2rpx solid #ccc;
  border-radius: 20rpx;
}
.search .goods_list {
  display: flex;
  flex-wrap: wrap;
  border-top: 2rpx solid #ccc;
}
.search .goods_item {
  width: 50%;
  height: 600rpx;
  overflow: hidden;
  padding: 5rpx;
  border-bottom: 2rpx solid #ccc;
  box-sizing: border-box;
}
.search .goods_item:nth-child(2n-1) {
  border-right: 2rpx solid #ccc;
}
.search .goods_img {
  height: 400rpx;
  overflow: hidden;
  text-align: center;
}
.search .goods_img image {
  width: 100%;
  height: 400rpx;
  border-radius: 16rpx;
  box-sizing: border-box;
}
.search .goods_info {
  padding: 15rpx 10rpx 0 10rpx;
}
.search .goods_info .goods_name {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  height: 80rpx;
  font-size: 30rpx;
}
.search .goods_comment {
  font-size: 24rpx;
  color: #999;
}
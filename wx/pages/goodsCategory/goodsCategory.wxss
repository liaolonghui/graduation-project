.goods_category {
  padding: 50rpx 10rpx 0 10rpx;
}


/* dialog对话框 */
.dialog {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  min-height: 100vh;
  max-height: 100%;
}
.dialog .dialog_mask {
  position: absolute;
  width: 100%;
  height: 100%;
  opacity: 0.7;
  background-color: #000;
}
.dialog .dialog_content {
  position: absolute;
  left: 50%;
  top: 20%;
  transform: translateX(-50%);
  padding: 60rpx;
  border-radius: 30rpx;
  background-color: #fff;
}

/* dialog里的输入框按钮等样式 */
.dialog input {
  height: 80rpx;
}
.dialog_hidden {
  display: none;
}
.dialog .category_level,
.dialog .category_parent,
.dialog .category_name {
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 30rpx;
  margin-bottom: 25rpx;
  border: 1px solid #333;
  border-radius: 20rpx;
}
.dialog .category_btn_area {
  display: flex;
  margin-top: 60rpx;
}
.dialog .category_btn_area button {
  width: 200rpx;
}
.dialog .category_btn_area button.blue_btn {
  margin-left: 20rpx;
  background-color: skyblue;
  color: #fff;
}